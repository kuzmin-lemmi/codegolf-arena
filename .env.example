# Database (PostgreSQL)
DATABASE_PROVIDER="postgresql"
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB_NAME?schema=public"

# Local development URL.
# In production set to your public domain, e.g. https://codegolf.ru
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
ALLOW_DEV_LOGIN="false"
TRUST_PROXY="false"
RATE_LIMIT_REDIS_URL=""
RATE_LIMIT_REDIS_TOKEN=""
DISABLE_STRICT_ENV="false"
# Temporary transition flag only (do not keep true permanently in production)
ALLOW_SQLITE_IN_PRODUCTION="false"

# Stepik OAuth
STEPIK_CLIENT_ID=""
STEPIK_CLIENT_SECRET=""
# Local callback URL.
# In production set to https://<your-domain>/api/auth/stepik/callback
STEPIK_REDIRECT_URI="http://localhost:3000/api/auth/stepik/callback"

# Piston
PISTON_API_URL="https://emkc.org/api/v2/piston"

# Admin seed (used by prisma db seed)
ADMIN_EMAIL=""
ADMIN_PASSWORD=""
